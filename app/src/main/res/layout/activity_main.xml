<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <Button
        android:id="@+id/h264player"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:text="播放H264文件"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:onClick="playH264"/>

    <Button
        android:id="@+id/screenRecorder"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:text="录屏"
        android:layout_below="@+id/h264player"
        android:layout_alignLeft="@+id/h264player"
        android:onClick="playScreenRecorder"/>

    <Button
        android:id="@+id/cameraRecorder"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:text="摄像头"
        android:layout_below="@+id/screenRecorder"
        android:layout_alignLeft="@+id/screenRecorder"
        android:onClick="playCameraRecorder"/>

    <Button
        android:id="@+id/videoConnectionRecorder"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:text="视频通话"
        android:layout_below="@+id/cameraRecorder"
        android:layout_alignLeft="@+id/screenRecorder"
        android:onClick="playVideoConnectionRecorder"/>

    <Button
        android:id="@+id/videoConnectionClientRecorder"
        android:layout_width="200dp"
        android:layout_height="64dp"
        android:text="视频通话"
        android:layout_below="@+id/videoConnectionRecorder"
        android:layout_alignLeft="@+id/screenRecorder"
        android:onClick="playVideoConnectionClientRecorder"/>
</RelativeLayout>